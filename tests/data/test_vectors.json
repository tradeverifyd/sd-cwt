{
  "test_vectors": [
    {
      "description": "Basic SD-CWT with simple claims",
      "input": {
        "claims": {
          "iss": "https://issuer.example.com",
          "sub": "user123",
          "iat": 1700000000,
          "given_name": "Alice",
          "family_name": "Smith",
          "email": "alice@example.com"
        },
        "selective_disclosure": ["given_name", "family_name", "email"],
        "algorithm": "ES256"
      },
      "expected": {
        "has_sd_claim": true,
        "sd_alg": "sha-256",
        "num_disclosures": 3
      }
    },
    {
      "description": "SD-CWT with nested claims",
      "input": {
        "claims": {
          "iss": "https://issuer.example.com",
          "sub": "user456",
          "iat": 1700000000,
          "address": {
            "street": "123 Main St",
            "city": "Anytown",
            "country": "US"
          }
        },
        "selective_disclosure": ["address"],
        "algorithm": "ES256"
      },
      "expected": {
        "has_sd_claim": true,
        "sd_alg": "sha-256",
        "num_disclosures": 1
      }
    },
    {
      "description": "SD-CWT with array claims",
      "input": {
        "claims": {
          "iss": "https://issuer.example.com",
          "sub": "user789",
          "iat": 1700000000,
          "roles": ["admin", "user", "developer"],
          "emails": ["primary@example.com", "secondary@example.com"]
        },
        "selective_disclosure": ["roles", "emails"],
        "algorithm": "ES256"
      },
      "expected": {
        "has_sd_claim": true,
        "sd_alg": "sha-256",
        "num_disclosures": 2
      }
    }
  ],
